<script>
$('#basic-tabs a').click(function (e) {
  e.preventDefault()
  $(this).tab('show')
});
</script>

<script src="/js/libs/bootstrap/transition.js"></script>
<script src="/js/libs/bootstrap/tab.js"></script>
<script src="/js/libs/bootstrap/tooltip.js"></script>
<script>
  var annotations = {
    'existing-html': [
      [ 'class.*"(list)"', 'Direct child elements of this container becomes list items' ],
